<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerFamilyTopLeft">rounded</item> <!-- Keeps the top left corner rounded -->
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <style name="RoundedCornerStyle">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RoundedCorners</item>
    </style>

    <style name="ShapeAppearanceOverlay.RoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Adjust the corner size as needed -->
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxBackgroundMode">none</item>
    </style>
</resources>